extends layout

block content

  h1 Prize: #{prize.name}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Books
    
    dl
      each book in prize_books
        dt 
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p This prize has no books
    hr
    p
      a(href=prize.url+'/delete') Delete Prize
    p
      a(href=prize.url+'/update') Update Prize
