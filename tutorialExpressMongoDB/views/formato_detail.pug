extends layout

block content

  h1 Formato: #{formato.name}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Books
    
    dl
      each book in formato_books
        dt 
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p This format has no books
        
    hr
    p
      a(href=formato.url+'/delete') Delete formato
    p
      a(href=formato.url+'/update') Update formato
