extends layout

block content
  .container
    h1= title
    
    p Results: #{count}
    table.table
      tr
        != createOrdering()
      each book in book_list
        tr
          td 
            a(href=book.url) #{book.title}
          td #{book.author.name}
    if (pages > 1)
    .container
      .pagination
        != createPagination(pages, page)
