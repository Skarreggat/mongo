extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Formato:
      input#name.form-control(type='text', placeholder='DVD, CD etc.' name='name' value=(undefined===formato ? '' : formato.name), required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors 
   ul
    for error in errors
     li!= error.msg
