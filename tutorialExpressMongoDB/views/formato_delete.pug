extends layout

block content

  h1 Delete Formato: #{formato.name}
  
  if formato_books.length
  
    p #[strong Delete the following books before attempting to delete this formato.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Books
    
      dl
      each book in formato_books
        dt 
          a(href=book.url) #{book.title}
        dd #{book.summary}

  else
    p Do you really want to delete this Formato?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=formato._id )

      button.btn.btn-primary(type='submit') Delete
